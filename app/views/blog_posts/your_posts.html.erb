<h1>Your Posts</h1>
  <div class="row">
  <% current_user.blog_posts.each do |blog| %>
  <div class="col-md-6">
    <div class="panel panel-default">
    <div class="panel-heading">
      <%= link_to blog.title, blog %>
    </div>
    <div class="panel-body">
      By <%= blog.user.username %><br>
      Posted: <%= blog.created_at %>
      <br>
      <%= blog.blog_entry[0..250]%>...[<%= link_to "Read More", blog %>]
    </div>
    <div class="panel-footer">
      <%= link_to "Edit", edit_blog_post_path(blog), class: "btn btn-warning" %>
      <%= link_to "Delete", blog, method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-danger" %>
</div>
</div>
</div>
<% end %>
</div>